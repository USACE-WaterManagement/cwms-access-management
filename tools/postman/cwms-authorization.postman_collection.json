  },
  "item": [
    {
      "name": "1. Health Check",
      "item": [
        {
          "name": "Proxy Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["health"]
            },
            "description": "Check if authorization proxy is healthy"
          }
        },
        {
          "name": "Proxy Ready",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/ready",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["ready"]
            },
            "description": "Check if proxy can reach downstream API"
          }
        }
      ]
    },
    {
      "name": "2. Authentication",
      "item": [
        {
          "name": "Get JWT Token - m5hectest",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "m5hectest",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "m5hectest",
                  "type": "text"
                },
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "cwms",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8080/auth/realms/cwms/protocol/openid-connect/token",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["auth", "realms", "cwms", "protocol", "openid-connect", "token"]
            },
            "description": "Get JWT token for m5hectest user (SWT office, cwms_user role)"
          }
