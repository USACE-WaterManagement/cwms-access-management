    {
      "name": "3. Whitelisted Endpoints (OPA Enforced)",
      "item": [
        {
          "name": "Offices - Anonymous (ALLOWED)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/cwms-data/offices",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["cwms-data", "offices"]
            },
            "description": "Offices endpoint is whitelisted and public - should be allowed even without user context"
          }
        },
        {
          "name": "Offices - User m5hectest (ALLOWED)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-test-user",
                "value": "{\"id\":\"m5hectest\",\"username\":\"m5hectest\",\"email\":\"m5hectest@usace.mil\",\"roles\":[\"cwms_user\"],\"offices\":[\"SWT\"]}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/cwms-data/offices",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["cwms-data", "offices"]
            },
            "description": "Offices endpoint with user context - should include x-cwms-auth-context header"
          }
        },
        {
          "name": "Offices - User l1hectest No Roles (STILL ALLOWED)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-test-user",
                "value": "{\"id\":\"l1hectest\",\"username\":\"l1hectest\",\"email\":\"l1hectest@usace.mil\",\"roles\":[],\"offices\":[\"SPL\"]}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/cwms-data/offices",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["cwms-data", "offices"]
            },
            "description": "Offices is public - allowed even for users with no roles"
          }
        },
        {
          "name": "Timeseries - Anonymous (DEPENDS ON OPA)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/cwms-data/timeseries",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["cwms-data", "timeseries"]
            },
            "description": "Timeseries endpoint is whitelisted - OPA will make authorization decision"
          }
        },
        {
          "name": "Timeseries - User m5hectest (DEPENDS ON OPA)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-test-user",
                "value": "{\"id\":\"m5hectest\",\"username\":\"m5hectest\",\"email\":\"m5hectest@usace.mil\",\"roles\":[\"cwms_user\"],\"offices\":[\"SWT\"]}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/cwms-data/timeseries",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["cwms-data", "timeseries"]
            },
            "description": "Timeseries with user context - OPA evaluates based on policy"
          }
        }
      ]
    },
