    {
      "name": "6. Direct OPA Policy Testing",
      "item": [
        {
          "name": "OPA - Test Offices (Public)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input\": {\n    \"user\": {\n      \"roles\": [],\n      \"offices\": [\"HQ\"]\n    },\n    \"resource\": \"offices\",\n    \"action\": \"read\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:8181/v1/data/cwms/authz/allow",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8181",
              "path": ["v1", "data", "cwms", "authz", "allow"]
            },
            "description": "Test OPA policy directly - offices is public endpoint"
          }
        },
        {
          "name": "OPA - Test Timeseries (No Roles)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input\": {\n    \"user\": {\n      \"roles\": [],\n      \"offices\": [\"HQ\"]\n    },\n    \"resource\": \"timeseries\",\n    \"action\": \"read\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:8181/v1/data/cwms/authz/allow",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8181",
              "path": ["v1", "data", "cwms", "authz", "allow"]
            },
            "description": "Test OPA policy for timeseries with no roles"
          }
        },
        {
          "name": "OPA - Test Timeseries (With Role)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input\": {\n    \"user\": {\n      \"roles\": [\"cwms_user\"],\n      \"offices\": [\"SWT\"]\n    },\n    \"resource\": \"timeseries\",\n    \"action\": \"read\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:8181/v1/data/cwms/authz/allow",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8181",
              "path": ["v1", "data", "cwms", "authz", "allow"]
            },
            "description": "Test OPA policy for timeseries with cwms_user role"
          }
        }
      ]
