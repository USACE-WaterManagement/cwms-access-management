{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/server.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "platform": "node",
        "bundle": true,
        "thirdParty": true,
        "format": [
          "esm"
        ],
        "external": [
          "node:*"
        ],
        "packages": "inline",
        "watch": false
      },
      "configurations": {
        "development": {
          "watch": true
        },
        "production": {
          "watch": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api:build",
        "watch": true,
        "inspect": false
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/api/jest.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "tsc -b --noEmit ."
      }
    }
  },
  "tags": []
}
