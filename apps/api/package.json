{
    "name": "@cwms-iam/api",
    "version": "0.1.0",
    "description": "API for CWMS Access Management",
    "main": "src/server.js",
    "scripts": {
        "build": "tsc --build",
        "host": "node build/src/index.js",
        "start": "nodemon -L ./src/index.ts"
    },
    "author": "Solid Logix, LLC",
    "private": true,
    "nodemon": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "ext": "ts, json",
        "exec": "tsx src/app.ts"
    },
    "devDependencies": {
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.18",
        "@types/jsonwebtoken": "^9.0.4",
        "@types/node": "^18.17.19",
        "@types/uuid": "^9.0.4",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-tsdoc": "^0.2.17",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "prettier-eslint": "^15.0.1",
        "tsx": "^4.19.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@aws-sdk/client-secrets-manager": "^3.418.0",
        "axios": "^1.5.0",
        "cors": "^2.8.5",
        "jsonwebtoken": "^9.0.2",
        "uuid": "^9.0.1",
        "winston": "^3.14.2"
    }
}
