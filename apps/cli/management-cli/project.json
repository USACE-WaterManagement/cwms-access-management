{
  "name": "management-cli",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/management-cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/cli/management-cli",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "platform": "node",
        "bundle": true,
        "thirdParty": true,
        "format": ["cjs"],
        "watch": false,
        "assets": []
      },
      "configurations": {
        "development": {
          "watch": true,
          "sourcemap": true
        },
        "production": {
          "watch": false,
          "minify": true,
          "sourcemap": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "management-cli:build",
        "watch": true,
        "inspect": false
      },
      "configurations": {
        "development": {
          "buildTarget": "management-cli:build:development"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "tsc -b --noEmit ."
      }
    }
  },
  "tags": ["type:cli", "scope:admin"]
}
